pipeline {
    agent any

    environment {
        SSH_CRED = 'node-app-key'
        SERVER_IP = '172.31.26.189'
        REMOTE_USER = 'ubuntu'
        WEB_DIR = '/var/www/html'
    }

    stages {
        stage('Clone Repo') {
            steps {
                git url: 'https://github.com/rohi-del/porfolio.git', branch: 'main'
            }
        }

        stage('Deploy to Apache Server') {
            steps {
                sshagent(credentials: ["${SSH_CRED}"]) {
                    sh '''
                        echo "Preparing temp directory..."
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "rm -rf /tmp/site && mkdir /tmp/site"

                        echo "Uploading website files..."
                        scp -o StrictHostKeyChecking=no -r * ${REMOTE_USER}@${SERVER_IP}:/tmp/site/

                        echo "Cleaning Apache directory..."
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "sudo rm -rf ${WEB_DIR}/*"

                        echo "Deploying new files..."
                        ssh -o StrictHostKeyChecking=no ${REMOTE_USER}@${SERVER_IP} "cp -r /tmp/site/* ${WEB_DIR}/"
                    '''
                }
            }
        }
    }
}